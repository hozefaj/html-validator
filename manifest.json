{
    "manifest_version": 2,
    "name": "HTML Validator",
    "version": "0.1.0",
    "description": "Validating web page",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_icon": "icon48.png"
    },
    "content_scripts": [{
        "js": [ "inspector.js"],
        "matches": ["https://www.paypal.com/*"]
    }],
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "permissions": ["tabs", "activeTab"]
}